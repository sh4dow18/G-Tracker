                        android:textSize="20sp"
                        android:textStyle="bold|italic" />
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/CreatorCompanyWebsiteContainer"
                android:layout_width="match_parent"
                android:layout_height="107dp"
